<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proconenct</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proconenct.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared/footer.css" />
    
    @RenderSection("Styles", required: false)
</head>
<body class="layout-flex">
    <div class="layout-wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                        <i class="fas fa-briefcase fa-lg me-2 text-primary"></i>
                        <span class="fw-bold text-primary">ProConnect</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 align-items-center">
                            <li class="nav-item">
                                <a class="nav-link" href="#como-funciona">Cómo funciona</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#categorias">Categorías</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#testimonios">Testimonios</a>
                            </li>
                        </ul>
                        <div class="d-flex align-items-center gap-2">
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                var userName = "Usuario";
                                var givenNameClaim = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.GivenName);
                                if (givenNameClaim != null && !string.IsNullOrWhiteSpace(givenNameClaim.Value))
                                {
                                    userName = givenNameClaim.Value;
                                }
                                <a class="btn btn-light border rounded-pill d-flex align-items-center justify-content-center px-3" asp-area="" asp-page="/auth/Profile" title="Mi perfil">
                                    <i class="fas fa-user me-2"></i>
                                    <span class="fw-semibold">@userName</span>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary me-2" asp-area="" asp-page="/auth/Login">Login</a>
                                <a class="btn btn-primary" asp-area="" asp-page="/auth/Register">Registrarse</a>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        @await Html.PartialAsync("_Footer")
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
