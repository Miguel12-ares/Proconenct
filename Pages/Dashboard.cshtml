@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["UserName"] = Model.FirstName;
}
<link rel="stylesheet" href="~/css/dashboard/main.css" asp-append-version="true" />
<script src="~/js/dashboard.js" asp-append-version="true"></script>

<div class="main-content dashboard-container row g-0">
    <!-- Sidebar de navegación -->
    <div class="col-12 col-md-3 col-lg-2">
        <partial name="_DashboardNav" />
    </div>
    
    <!-- Contenido principal -->
    <div class="dashboard-content col-12 col-md-9 col-lg-10">
        @if (Model.IsLoading)
        {
            <div class="loading-state d-flex flex-column align-items-center justify-content-center" style="min-height: 300px;">
                <i class="fas fa-spinner fa-spin fa-2x mb-3 text-primary"></i>
                <span>Cargando...</span>
            </div>
        }
        else if (!Model.IsAuthenticated)
        {
            <div class="alert alert-warning mt-4">Debes iniciar sesión para ver el dashboard.</div>
        }
        else if (Model.IsClient)
        {
            <!-- Dashboard para Clientes -->
            <div class="dashboard-header">
                <h2 class="dashboard-title">
                    <i class="fas fa-user-circle me-2 text-primary"></i>
                    Bienvenido, @Model.FirstName!
                </h2>
            </div>
            
            <div class="dashboard-section">
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <div class="dashboard-card">
                            <div class="card-icon">
                                <i class="fas fa-search"></i>
                            </div>
                            <div class="card-content">
                                <h5>Buscar Profesionales</h5>
                                <p>Encuentra expertos en tu área de interés</p>
                                <a href="/search" class="btn btn-primary">Buscar</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="dashboard-card">
                            <div class="card-icon">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <div class="card-content">
                                <h5>Mis Reservas</h5>
                                <p>Gestiona tus citas programadas</p>
                                <a href="/bookings" class="btn btn-outline-primary">Ver Reservas</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (Model.IsProfessional)
        {
            <!-- Dashboard para Profesionales -->
            <div class="dashboard-header">
                <h2 class="dashboard-title">
                    <i class="fas fa-user-tie me-2 text-primary"></i>
                    Panel Profesional - @Model.FirstName
                </h2>
            </div>

            <!-- Métricas Clave -->
            <div class="dashboard-section">
                <h3 class="section-title">Métricas Clave</h3>
                <div class="row g-3">
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="metric-card">
                            <div class="metric-icon">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                            <div class="metric-content">
                                <h4>@Model.Stats.TotalBookings</h4>
                                <p>Reservas Totales</p>
                                <small class="text-success">+12% este mes</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="metric-card">
                            <div class="metric-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="metric-content">
                                <h4>@Model.Stats.CompletedBookings</h4>
                                <p>Servicios Completados</p>
                                <small class="text-success">+8% este mes</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="metric-card">
                            <div class="metric-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="metric-content">
                                <h4>@Model.Stats.ActiveClients</h4>
                                <p>Clientes Activos</p>
                                <small class="text-success">+5% este mes</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <div class="metric-card">
                            <div class="metric-icon">
                                <i class="fas fa-star"></i>
                            </div>
                            <div class="metric-content">
                                <h4>@Model.Stats.AverageRating.ToString("0.0")</h4>
                                <p>Calificación Promedio</p>
                                <small class="text-info">@Model.Stats.TotalReviews reseñas</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Próximas Reservas -->
            <div class="dashboard-section">
                <h3 class="section-title">Próximas Reservas</h3>
                @if (Model.ReceivedBookings.Any())
                {
                    <div class="row g-3">
                        @foreach (var booking in Model.ReceivedBookings.Take(3))
                        {
                            <div class="col-12 col-md-6">
                                <div class="booking-card">
                                    <div class="booking-header">
                                        <h5>@(booking.ProfessionalName ?? "Cliente")</h5>
                                        <span class="status-badge status-@(booking.Status.ToLower())">
                                            @(booking.Status == "Pending" ? "PENDIENTE" : 
                                              booking.Status == "Confirmed" ? "CONFIRMADA" : 
                                              booking.Status == "Completed" ? "COMPLETADA" : 
                                              booking.Status == "Cancelled" ? "CANCELADA" : booking.Status.ToUpper())
                                        </span>
                                    </div>
                                    <div class="booking-details">
                                        <p><strong>Cliente:</strong> @(booking.ClientName ?? "Cliente")</p>
                                        <p><strong>Fecha:</strong> @booking.AppointmentDate.ToString("dd MMM yyyy, HH:mm")</p>
                                        <p><strong>Duración:</strong> @booking.AppointmentDuration min</p>
                                        <p><strong>Monto:</strong> $@booking.TotalAmount.ToString("N0")</p>
                                    </div>
                                    <div class="booking-actions">
                                        <a href="/booking/Details?id=@booking.Id" class="btn btn-primary btn-sm">
                                            Ver Detalles
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                        <h5>No tienes reservas próximas</h5>
                        <p class="text-muted">Cuando recibas reservas, aparecerán aquí</p>
                    </div>
                }
            </div>

            <!-- Historial de Servicios -->
            <div class="dashboard-section">
                <h3 class="section-title">Historial de Servicios Contratados</h3>
                @if (Model.ReceivedBookings.Any(b => b.Status == "Completed"))
                {
                    <div class="row g-3">
                        @foreach (var booking in Model.ReceivedBookings.Where(b => b.Status == "Completed").Take(3))
                        {
                            <div class="col-12 col-md-6">
                                <div class="service-card">
                                    <div class="service-header">
                                        <h5>@(booking.ProfessionalName ?? "Servicio")</h5>
                                        <span class="status-badge status-completed">COMPLETADO</span>
                                    </div>
                                    <div class="service-details">
                                        <p><strong>Cliente:</strong> @(booking.ClientName ?? "Cliente")</p>
                                        <p><strong>Fecha:</strong> @booking.AppointmentDate.ToString("dd MMM yyyy")</p>
                                        <p><strong>Monto:</strong> $@booking.TotalAmount.ToString("N0")</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-history fa-3x text-muted mb-3"></i>
                        <h5>No hay servicios completados</h5>
                        <p class="text-muted">Los servicios completados aparecerán aquí</p>
                    </div>
                }
            </div>

            <!-- Notificaciones Recientes -->
            <div class="dashboard-section">
                <h3 class="section-title">Notificaciones Recientes</h3>
                <div class="notifications-list">
                    <div class="notification-item">
                        <i class="fas fa-bell text-primary"></i>
                        <div class="notification-content">
                            <p>Nueva reserva de Juan Pérez para el 25 Nov.</p>
                            <small class="text-muted">Hace 2 horas</small>
                        </div>
                    </div>
                    <div class="notification-item">
                        <i class="fas fa-bell text-primary"></i>
                        <div class="notification-content">
                            <p>Tu perfil ha sido actualizado.</p>
                            <small class="text-muted">Hace 1 día</small>
                        </div>
                    </div>
                    <div class="notification-item">
                        <i class="fas fa-bell text-primary"></i>
                        <div class="notification-content">
                            <p>Recordatorio: Auditoría de Usabilidad mañana.</p>
                            <small class="text-muted">Hace 2 días</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acceso Rápido -->
            <div class="dashboard-section">
                <div class="quick-access">
                    <a href="/search" class="btn btn-primary btn-lg">
                        <i class="fas fa-search me-2"></i>
                        Buscar Profesionales
                    </a>
                </div>
            </div>
        }
    </div>
</div> 